{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "https://hunters-candy-backend.vercel.app/api/$1" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ]
}